---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contacto - Portafolio de Fotografía" description="Ponte en contacto para colaboraciones y proyectos fotográficos">
  <section class="contact-section">
    <div class="container">
      <div class="contact-header fade-in-up">
        <h1>Contacto</h1>
        <p class="contact-subtitle">¿Tienes un proyecto en mente? Hablemos</p>
      </div>

      <div class="contact-content">
        <div class="contact-info">
          <h2>Información de Contacto</h2>
          <div class="info-item">
            <h3>Email</h3>
            <p><a href="mailto:contacto@fotografia.com">contacto@fotografia.com</a></p>
          </div>
          <div class="info-item">
            <h3>Teléfono</h3>
            <p><a href="https://wa.me/59177955656" target="_blank" rel="noopener noreferrer">+591 77955656</a></p>
          </div>
          <div class="info-item">
            <h3>Ubicación</h3>
            <p>Cochabamba, Bolivia</p>
          </div>
          <div class="info-item">
            <h3>Redes Sociales</h3>
            <div class="social-links">
              <a href="#" aria-label="Instagram">Instagram</a>
              <a href="#" aria-label="Facebook">Facebook</a>
              <a href="#" aria-label="Twitter">Twitter</a>
            </div>
          </div>
        </div>

        <form class="contact-form" id="contactForm">
          <div class="form-group">
            <label for="name">Nombre</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required 
              placeholder="Tu nombre completo"
            />
          </div>

          <div class="form-group">
            <label for="email">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required 
              placeholder="tu@email.com"
            />
          </div>

          <div class="form-group">
            <label for="subject">Asunto</label>
            <input 
              type="text" 
              id="subject" 
              name="subject" 
              required 
              placeholder="Asunto del mensaje"
            />
          </div>

          <div class="form-group">
            <label for="message">Mensaje</label>
            <textarea 
              id="message" 
              name="message" 
              required 
              placeholder="Cuéntame sobre tu proyecto..."
            ></textarea>
          </div>

          <button type="submit" class="btn">Enviar Mensaje</button>
        </form>
      </div>

      <div id="formMessage" class="form-message"></div>
    </div>
  </section>
</Layout>

<style>
  .contact-section {
    padding-top: 120px;
    padding-bottom: 4rem;
    min-height: 100vh;
  }

  .contact-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .contact-subtitle {
    font-size: 1.1rem;
    color: var(--text-muted);
    font-weight: 300;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 4rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .contact-info {
    padding: 2rem;
  }

  .contact-info h2 {
    margin-bottom: 2rem;
    font-size: 1.8rem;
  }

  .info-item {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-color);
  }

  .info-item:last-child {
    border-bottom: none;
  }

  .info-item h3 {
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
  }

  .info-item p {
    font-size: 1.1rem;
    margin: 0;
  }

  .info-item a {
    color: var(--text-primary);
    transition: color var(--transition-fast);
  }

  .info-item a:hover {
    color: var(--text-muted);
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
  }

  .social-links a {
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    position: relative;
  }

  .social-links a::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: var(--color-black);
    transition: width var(--transition-medium);
  }

  .social-links a:hover::after {
    width: 100%;
  }

  .contact-form {
    background-color: transparent;
    padding: 3rem;
    border: 2px solid var(--text-primary);
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
    color: var(--text-secondary);
  }

  .contact-form .btn {
    width: 100%;
    margin-top: 1rem;
  }

  .form-message {
    text-align: center;
    margin-top: 2rem;
    padding: 1rem;
    border-radius: 4px;
    font-weight: 500;
    display: none;
  }

  .form-message.success {
    display: block;
    background-color: #e8f5e9;
    color: #2e7d32;
    border: 1px solid #4caf50;
  }

  .form-message.error {
    display: block;
    background-color: #ffebee;
    color: #c62828;
    border: 1px solid #f44336;
  }

  @media (max-width: 968px) {
    .contact-section {
      padding-top: 100px;
    }

    .contact-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .contact-form {
      padding: 2rem;
    }
  }

  @media (max-width: 480px) {
    .social-links {
      flex-direction: column;
      gap: 1rem;
    }

    .contact-form {
      padding: 1.5rem;
    }
  }
</style>

<script>
  const form = document.getElementById('contactForm') as HTMLFormElement;
  const formMessage = document.getElementById('formMessage');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(form);
    const name = formData.get('name') as string;
    const email = formData.get('email') as string;
    const subject = formData.get('subject') as string;
    const message = formData.get('message') as string;
    
    // Format WhatsApp message
    const whatsappMessage = `*Nombre:* ${name}

*Email:* ${email}

*Asunto:* ${subject}

*Mensaje:*
${message}`;
    
    // Encode message for URL
    const encodedMessage = encodeURIComponent(whatsappMessage);
    
    // WhatsApp number (without + or spaces)
    const whatsappNumber = '59177955656';
    
    // Create WhatsApp URL
    const whatsappURL = `https://wa.me/${whatsappNumber}?text=${encodedMessage}`;
    
    // Open WhatsApp in new tab
    window.open(whatsappURL, '_blank');
    
    // Show success message
    if (formMessage) {
      formMessage.textContent = '¡Redirigiendo a WhatsApp! Si no se abre automáticamente, haz click en el enlace.';
      formMessage.className = 'form-message success';
    }
    
    // Reset form
    form.reset();
    
    // Hide message after 5 seconds
    setTimeout(() => {
      if (formMessage) {
        formMessage.style.display = 'none';
      }
    }, 5000);
  });
</script>
